@model VegitableShop.Models.Role

@{
    ViewData["Title"] = "Chỉnh sửa quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Quản lý truy cập</a>
            <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Index" class="breadcrumb-item">Danh sách quyền truy cập</a>
            <span class="breadcrumb-item active">Chỉnh sửa quyền truy cập</span>
        </nav>
    </div>
</div>

<form asp-action="Edit" asp-route-id="@Model.RoleId">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="RoleId" />
    <div class="form-col">
        <div class="form-group col-md-3">
            <label for="inputEmail4">Tên</label>
            <input type="text" class="form-control" asp-for="RoleName" placeholder="Tên quyền truy cập">
        </div>
        <div class="form-group col-md-3">
            <label for="inputPassword4">Mô tả</label>
            <input type="text" class="form-control" asp-for="Description" placeholder="Mô tả">
        </div>
        <div class="form-group col-md-3">
            <button type="submit" class="btn btn-primary">Lưu</button>
        </div>
    </div>
</form>

